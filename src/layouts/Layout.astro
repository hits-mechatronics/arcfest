---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="/global.css" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" /><link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Comfortaa&family=Permanent+Marker&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
    <style>
      .grid-lines > div {
        @apply from-cyan-400/0 via-cyan-400 to-cyan-400/0;
      }
      .grid-lines > .vertical {
        @apply absolute top-0 w-px h-full bg-gradient-to-b;
      }
      .grid-lines > .horizontal {
        @apply absolute left-0 h-px w-full bg-gradient-to-r;
      }
    </style>
  </head>
  <body
    class="flex flex-col justify-center items-center h-screen p-6 font-comfy text-cyan-400 bg-gray-800 select-none"
  >
    <div class="grid-lines -z-10">
      <div class="right-1/4 vertical"></div>
      <div class="right-1/2 vertical"></div>
      <div class="right-3/4 vertical"></div>
      <div class="top-1/4 horizontal"></div>
      <div class="top-2/4 horizontal"></div>
      <div class="top-3/4 horizontal"></div>
    </div>
    <slot />
  </body>
</html>
